{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Classroom Compiler",
            "command": "gcc",
            "type": "shell",
            "args": [
                "-o",
                "Clases/bin/Debug/Clases",
                "Clases/arrayFunctions.c",                
                "Clases/utn.c",
                "Clases/persons.c",
                "Clases/products.c",
                "Clases/classroom.c",
                "Clases/main.c"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Exercises Compiler",
            "command": "gcc",
            "type": "shell",
            "args": [
                "-o",
                "GuiaEjercicios/bin/Debug/GuiaEjercicios",
                "GuiaEjercicios/validator.c",
                "GuiaEjercicios/operations.c",
                "GuiaEjercicios/exercises.c",
                "GuiaEjercicios/main.c"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
